              "host": ["{{baseUrl}}"],
              "path": ["api","products"],
              "query": [
                { "key": "q", "value": "{{q}}" },
                { "key": "minPrice", "value": "{{minPrice}}" },
                { "key": "maxPrice", "value": "{{maxPrice}}" },
                { "key": "active", "value": "{{active}}" },
                { "key": "page", "value": "{{page}}" },
                { "key": "pageSize", "value": "{{pageSize}}" },
                { "key": "sort", "value": "{{sort}}" },
