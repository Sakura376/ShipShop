            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "try {",
                  "  const data = pm.response.json();",
                  "  if (data && data.token) pm.environment.set('token', data.token);",
                  "  if (data && data.user) pm.environment.set('userId', data.user.user_id || '');",
                  "} catch(e) {}"
                ]
              }
            }
          ],
          "response": []
